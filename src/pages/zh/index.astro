---
// src/pages/index.astro

import AvatarDemo from "../../components/avatar"
import '../../styles/global.css'
import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card";
import Profile from "../../components/Profile";
import ParticlesDemo from "../../components/Particles";
---

<BaseLayout title = "Arthur Kuo | 全端工程師 & 生成式AI服務 ", description="Hi，我是Arthur Kuo，一位擅長網站前後端和生成式 AI 服務的全端工程師。">
	<Card client:load>
			<Profile
				key="1"
				name="Arthur Kuo"
				position="Web Developer"
				aboutMe="Hi，我是Arthur Kuo，一位擅長網站前後端和生成式 AI 服務的全端工程師。 \n\n 專長：\n Python、Node.js、React、MySQL、Elasticsearch 和 Redis。"
				linkedin={import.meta.env.LINKEDIN_URL}
				github={import.meta.env.GITHUB_URL}
				medium={import.meta.env.MEDIUM_URL}
				cvLink="/files/resume-cv.pdf"
				profileImage=""
				client:load
			/>
	</Card>
</BaseLayout>
