---
// src/pages/index.astro

import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card";
import Profile from "../components/Profile";
---

<BaseLayout title = "Arthur Kuo | Full-Stack Developer & AI Service Expert", description="Arthur Kuo, a full-stack developer with expertise in Python, Node.js, and Gen AI services. Specializing in creating dynamic websites and user-centric designs.">
	<Card>
		<Profile
			key="1"
			name="Arthur Kuo"
			position="Web Developer"
			aboutMe="Hi there! I'm Arthur Kuo, a seasoned web developer with 1 year of experience in Full-stack development and Gen AI service design. \n\nSpecialties:\n Python, Node.js, React, MySQL, Elasticsearch, and Redis."
			linkedin={import.meta.env.LINKEDIN_URL}
			github={import.meta.env.GITHUB_URL}
			cvLink="/files/resume-cv.pdf"
			profileImage="/images/profile2.jpg"
		/>
	</Card>
</BaseLayout>
